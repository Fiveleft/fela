<section id="info-section" class="section container" data-id="info" data-scrollto="info">
  <div class="section-inner">
    <div class="about-container" data-content="about">
    {{#if infoData.about }}
      <h1>{{infoData.about.title}}</h1>
      {{{infoData.about.content}}}
    {{/if }}
    </div>
    <div class="clients">
      <h2>Clients I've produced work for</h2>
      <ul class="client-list partnership-list">
        {{#if clientData}}
        {{#each clientData}}
        <li class="client-item partner-item">
          <span class="partner-link" data-id="{{id}}">{{{title}}}</span>
        </li>
        {{/each}}
        {{/if}}
      </ul>
    </div>
    <div class="agencies">
      <h2>Agencies I've worked with</h2>
      <ul class="agency-list partnership-list">
        {{#if agencyData}}
        {{#each agencyData}}
        <li class="agency-item partner-item">
          {{#if info.website}}
          <a class="partner-link" href="{{info.website}}" target="_blank" data-id="{{id}}">{{{title}}}</a>
          {{else}}
          <span class="partner-link" data-id="{{id}}">{{{title}}}</span>
          {{/if}}
        </li>
        {{/each}}
        {{/if}}
      </ul>
    </div>
    <div class="collaboration-container" data-content="collaboration">
    {{#if infoData.collaboration }}
      <h2>{{infoData.collaboration.title}}</h2>
      {{{infoData.collaboration.content}}}
    {{/if }}
    </div>
  </div>
</section>