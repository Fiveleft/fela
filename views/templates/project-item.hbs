<div class="project" data-slug="{{slug}}" >
  <div class="project-inner">
    <div class="media" {{#if media}}data-media="{{media}}"{{/if}}>
      <div class="media-inner">
        <a href="#" class="media-controls">
          <span class="inner">
            <i class="icon play">Play</i>
            <i class="icon pause">Pause</i>
          </span>
        </a> 
        <div class="media-container">
          {{#if gallery}}
          <ul class="gallery-list">
          {{#each gallery}}
            <li class="gallery-item" data-id="{{id}}"><span class="placeholder" data-src="{{src}}"></span></li>
          {{/each}}
          </ul>
          {{/if}}
          {{#if video}}
          <video class="video" {{#if video.poster}}poster="{{video.poster.src}}"{{/if}} preload="load" loop="loop">
            {{#if video.mp4}}<source src="{{video.mp4}}" type="video/mp4" />{{/if}}
            {{#if video.ogg}}<source src="{{video.ogg}}" type="video/ogg" />{{/if}}
            {{#if video.webm}}<source src="{{video.webm}}" type="video/webm" />{{/if}}
          </video>
          {{/if}}
        </div>
      </div>
      <a class="close" href=""><i class="icon">Close</i></a>
    </div>
    <div class="info">
      <h1 class="title">{{{title}}}</h1>
      {{#if subtitle}}
      <h2 class="subtitle">{{{subtitle}}}</h2>
      {{/if}}
      <div class="details">
        {{{content}}}
        <p class="additional">
          
          {{#if client}}
          <span class="participant-info client">
            <span class="info-label">Client:&nbsp;</span>
            {{#if client.website}}
            <a class="info-name" href="{{client.website}}">{{client.name}}</a>
            {{else}}
            <span class="info-name">{{client.name}}</a>
            {{/if}}
          </span>
          {{/if}}
          
          {{#if agency}}
          <span class="separator">/</span>
          <span class="participant-info agency">
            <span class="info-label">Agency:&nbsp;</span>
            {{#if agency.website}}
            <a class="info-name" href="{{agency.website}}">{{agency.name}}</a>
            {{else}}
            <span class="info-name">{{agency.name}}</a>
            {{/if}}
          </span>
          {{/if}}
          
          {{#if disciplines}}
          <span class="separator">/</span>
          <span class="taxonomy disciplines">
            <span class="info-label">Disciplines: </span>
            {{#each disciplines}}
            <span class="taxonomy-item" data-term-"{{name}}">
              <span class="label">{{{name}}}</span><span class="separator">,</span>
            </span>
            {{/each}}
          </span>
          {{/if}}
          
          {{#if technologies}}
          <span class="separator">/</span>
          <span class="taxonomy technologies">
            <span class="info-label">Technology: </span>
            {{#each technologies}}
            <span class="taxonomy-item" data-term-"{{name}}">
              <span class="label">{{{name}}}</span><span class="separator">,</span>
            </span>
            {{/each}}
          </span>
          {{/if}}
          
          {{#if tools}}
          <span class="separator">/</span>
          <span class="taxonomy tools">
            <span class="info-label">Tools: </span>
            {{#each tools}}
            <span class="taxonomy-item" data-term-"{{name}}">
              <span class="label">{{{name}}}</span><span class="separator">,</span>
            </span>
            {{/each}}
          </span>
          {{/if}}

          {{#if website}}
          <span class="separator">/</span>
          <span class="participant-info site">
            <a class="project-link info-name" href="{{website}}" target="_blank" title="{{title}}">View Site</a>
          </span>
          {{/if}}
        </p>
        <!--
        <a class="next project-advance" href="#">
          <span class="label">Next Project</span>
          <span class="title-wrapper"><span class="project-title">{project title}</span></span>
          <i class="icon"></i>
        </a>
        -->
      </div>
    </div>
  </div>
</div>